    CREATE TABLE Game (
    player_name text,
    aces int, twos int, threes int,
    fours int, fives int, sixes int,
    upper_sum int, upper_bonus int, upper_total int,

    three_of_kind int, four_of_kind int, full_house int,
    small_straight int, large_straight int,
    yahtzee int, yahtzee_bonus int, lower_sum int, grand_total int,

    dice1_cur_num int, dice2_cur_num int, dice3_cur_num int, dice4_cur_num int, dice5_cur_num int,
    dice1_checkbox int, dice2_checkbox int, dice3_checkbox int, dice4_checkbox int, dice5_checkbox int,

    aces_select int, twos_select int, threes_select int,
    fours_select int, fives_select int, sixes_select int,
    three_of_kind_select int, four_of_kind_select int, full_house_select int,
    small_straight_select int, large_straight_select int, yahtzee_select int,

    id INTEGER PRIMARY KEY AUTOINCREMENT);